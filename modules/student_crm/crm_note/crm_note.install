      'data' => array(
        'type' => 'text',
        'not null' => FALSE,
        'size' => 'big',
        'serialize' => TRUE,
        'description' => 'A serialized array of additional data related to this crm_note type.',
      ),
    ) + entity_exportable_schema_fields(),
